        <footer class="px-4 py-16 sm:px-5 sm:py-24" data-sb-field-path={fieldPath}>
            <div class="mx-auto text-center max-w-7xl" data-sb-field-path=".text" set:html={marked.parse(text)} />
       
<footer class="bg-gray-900 text-white">
            <div class="max-w-7xl mx-auto px-4 py-12 sm:px-6 lg:px-8">
                <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
                    {/* Section À propos */}
                    <div>
                        <h3 class="text-lg font-semibold mb-4">À propos</h3>
                        <ul class="space-y-2">
                            <li><a href="#" class="hover:text-gray-300">Qui sommes-nous ?</a></li>
                            <li><a href="#" class="hover:text-gray-300">Notre histoire</a></li>
                            <li><a href="#" class="hover:text-gray-300">Nos valeurs</a></li>
                            <li><a href="#" class="hover:text-gray-300">Nous rejoindre</a></li>
                        </ul>
                    </div>

                    {/* Section Formations */}
                    <div>
                        <h3 class="text-lg font-semibold mb-4">Nos formations</h3>
