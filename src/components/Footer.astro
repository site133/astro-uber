---
import { marked } from 'marked';
import { type Footer } from 'types';

interface Props extends Footer {
    'data-sb-field-path'?: string;
}

const { text, 'data-sb-field-path': fieldPath } = Astro.props;
---

{
    text && (
        <footer class="px-4 py-16 sm:px-5 sm:py-24" data-sb-field-path={fieldPath}>
            <div class="mx-auto text-center max-w-7xl" data-sb-field-path=".text" set:html={marked.parse(text)} />
        </footer>
    )
 <footer class="bg-gray-100 py-12" data-sb-field-path={fieldPath}>
            <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8" data-sb-field-path=".text">
                <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
                    {/* Colonne Informations */}
                    <div>
                        <h3 class="text-lg font-semibold mb-4 text-gray-900">Informations</h3>
                        <ul class="space-y-3">
                            <li><a href="#" class="text-gray-600 hover:text-gray-900">Mentions légales</a></li>
                            <li><a href="#" class="text-gray-600 hover:text-gray-900">Conditions générales</a></li>
                            <li><a href="#" class="text-gray-600 hover:text-gray-900">Politique de confidentialité</a></li>
                        </ul>
                    </div>

                    {/* Colonne Rubriques */}
                    <div>
                        <h3 class="text-lg font-semibold mb-4 text-gray-900">Rubriques</h3>
                        <ul class="space-y-3">
                            <li><a href="#" class="text-gray-600 hover:text-gray-900">Shopping</a></li>
                            <li><a href="#" class="text-gray-600 hover:text-gray-900">Services</a></li>
                            <li><a href="#" class="text-gray-600 hover:text-gray-900">Devenez vendeur</a></li>
                        </ul>
                    </div>

                    {/* Colonne Téléchargement */}
                    <div>
                        <h3 class="text-lg font-semibold mb-4 text-gray-900">Télécharger l'application</h3>
                        <div class="space-y-4">
                            {/* Bouton App Store */}
                            <a href="#" class="inline-block">
                                <img src="https://upload.wikimedia.org/wikipedia/commons/3/3c/Download_on_the_App_Store_Badge.svg" 
                                     alt="Télécharger sur l'App Store" 
                                     class="h-10">
                            </a>
                            {/* Bouton Google Play */}
                            <a href="#" class="inline-block">
                                <img src="https://upload.wikimedia.org/wikipedia/commons/7/78/Google_Play_Store_badge_EN.svg" 
                                     alt="Télécharger sur Google Play" 
                                     class="h-10">
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </footer>
    )
}

